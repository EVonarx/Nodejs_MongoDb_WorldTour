<%- include('../layout_header.ejs') -%>

<body>
    <div class="container">
        <h1> <a href="/countries">Home - World tour</a></h1> <!-- a link back to the homepage-->
        <h2>Show a place</h2>
        <div class="row">
            <div class="col">
                <h2>Name : <%= displayPlace.name %>
                    <a href="/places/edit/<%= displayPlace._id %>" class="btn btn-primary">Edit</a>
                    <a href="/places/delete/<%= displayPlace._id %>"
                        onclick="return confirm('Are you sure you want to delete this item?')" ;
                        class="btn btn-primary">Delete</a>
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h2>Text : </h2>
                <p class="text-justify"><%= displayPlace.texts %></p>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <img src="/img/<%= displayPlace.pictures %>" alt="<%= displayPlace.name %>" style="width : 100%">
            </div>
        </div>

        <hr>
        <%- include('../layout_copyright.ejs') -%>

    </div>

</body>

</html>
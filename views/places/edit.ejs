<%- include('../layout_header.ejs') -%>

<body>
    <div class="container">
        <h1> <a href="/countries">Home - World tour</a></h1> <!-- a link back to the homepage-->
        <h2>Edit a place</h2>

        <form method="POST" action="<%= endpoint %>" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Place name</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= displayPlace.name %>">
            </div>

            <div class="form-group">
                <label for="number">Number</label>
                <input type="number" name="number" id="number" class="form-control"
                    value="<%= displayPlace.number %>">
            </div>
            
            <div class="form-group">
                <label for="text">Text</label>
                <textarea type="text" name="text" id="text" class="form-control"><%= displayPlace.texts %></textarea>
            </div>

            <div class="form-group">
                <label for="file">Picture</label> <br />
                <input type="file" name="file" id="file" value="<%= displayPlace.pictures %>">
            </div>
            <!--
            <hr>
            <div id="appendText">
            </div>
            -->
            <hr>
            <input type="submit" class="btn btn-primary" value="save" />
        </form>
        <!--
        <hr>
        <hr>
        <button class="btn btn-primary" onclick="addTextAndPicture()">Add text and picture</button>
        -->
        <hr>
        <%- include('../layout_copyright.ejs') -%>
    </div>

    <script type="text/javascript">
        function addTextAndPicture() {
            var divtag = document.createElement("div");
            divtag.setAttribute('class', 'form-group');
            
            // inner HTML
            divtag.innerHTML ='<label for="text">Text</label> <textarea type="text" name="text" id="text" class="form-control"></textarea>';
            
            // other way
            //var text = document.createTextNode("Test");
            //divtag.appendChild(text);

            // append
            document.getElementById("appendText").appendChild(divtag);

            var divtag2 = document.createElement("div");
            divtag2.setAttribute('class', 'form-group');
            
            // inner HTML
            divtag2.innerHTML =' <label for="file">Picture</label> <br /> <input type="file" name="file" id="file" value="">';
            
            // append
            document.getElementById("appendText").appendChild(divtag2);
        }

    </script>
</body>

</html>
<%- include('../layout_header.ejs') -%>

<body>
    <div class="container">
        <h1> World tour - Places</h1>

        <% for(var i=0; i < displayPlaces.length; i++) { %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/places/<%= displayPlaces[i]._id%>"> Place name : <%= displayPlaces[i].name %></a>
                <a href="/places/delete/<%= displayPlaces[i]._id %>" onclick="return confirm('Are you sure you want to delete this place?')"; class="btn btn-primary">Delete</a>
            </div>
            <div class="panel-body">
                Text : <%= displayPlaces[i].text %>
            </div>
        </div>
        <% } %>
        
        <hr>
        <%- include('../layout_copyright.ejs') -%>

    </div>
</body>

</html>
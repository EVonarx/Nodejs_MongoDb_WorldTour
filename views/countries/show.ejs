<%- include('../layout_header.ejs') -%>

<body>
    <div class="container">
        <h1> <a href=".">Home - World tour</a></h1> <!-- a link back to the homepage-->
        <h2>Show a country</h2>
        <hr>
        <div class="row">

            <div class="col-sm-3">
                <!-- <img src="/img/c912bf030c81d1835dd07b14f1445ad8" alt="<%= displayCountry.name %>" width="100%"> -->
                <img src="/img/<%= displayCountry.picture %>" alt="<%= displayCountry.name %>" style="width : 100%">
            </div>

            <div class="col-sm-9">
                <h2>Name : <%= displayCountry.name %>
                    <a href="/countries/edit/<%= displayCountry._id %>" class="btn btn-primary">Edit</a>
                    <a href="/countries/delete/<%= displayCountry._id %>"
                        onclick="return confirm('Are you sure you want to delete this item?')" ;
                        class="btn btn-primary">Delete</a>
                </h2>
                <p class="text-justify">
                    Description : <%= displayCountry.description %>
                </p>
                <!-- <h3>Places : <a href="/places/new/<%= displayCountry._id %>" class="btn btn-primary">Add</a></h3> -->
                <h3>Places : <a href="/places/new/<%= displayCountry._id %>" class="btn btn-primary">Add</a></h3>
                <br />

                <div class="container">
                    <% for(var i=0; i < displayCountry.places.length; i++) { %>
                    <div class="row">
                        <div class="col">
                            <a href="/places/<%= displayCountry.places[i]._id%>">
                                <h3>Name :
                                    <%= displayCountry.places[i].name %></h3>
                            </a>
                        </div>
                        <div class="col">
                            <h3>Number : <%= displayCountry.places[i].number %></h3>
                        </div>
                    </div>
                    <% } %>
                </div>

            </div>
        </div>
        <hr>
        <%- include('../layout_copyright.ejs') -%>

    </div>

</body>

</html>
<%- include('../layout_header.ejs') -%>

<body>
    <div class="container">
        <h1> Home - World tour</h1>
        <h2> Countries</h2>
        <hr>
        <a href="/countries/new" class="btn btn-primary">Add a country</a>
      <br/>
      <br/>

        <div class="container">
            <% for(var i=0; i < displayCountries.length; i++) { %>
            <div class="row">
                <div class="col">
                    <a href="/countries/<%= displayCountries[i]._id%>">
                        <h3>Name :
                            <%= displayCountries[i].name %></h3>
                    </a>
                </div>
                <div class="col">
                    <h3>Number : <%= displayCountries[i].number%></h3>
                </div>
            </div>
            <% } %>
        </div>
        
        <hr>

        <%- include('../layout_copyright.ejs') -%>

    </div>

</body>

</html>